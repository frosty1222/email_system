<div class="detail">
    <div class="main-content">
        <div class="from"><span>
            <% if(type === 'in'){ %>
            From:
            <% }else{ %>
            To:
            <% } %>
        </span>
        <h3><%= data.fullName  %></h3></div>
        <div class="subject"> 
            <span>Subject:</span>
            <h3>
                <% if(data.subject){ %>
                    <%= data.subject  %>
                <% }else{ %>
                    (no subject)
                <% } %>
            </span>
        </div>
        <div class="content">
            <label for="content">Content:</label>
            <div class="content-para">
                <%= data.content %>
            </div>
        </div>
        <div class="file-attach">
            <% files.forEach(function(item,index){ %>
            <button><a href="/inbox/download-file/<%= item.fileName  %>">Click to download attach file <%= index +1 %></a></button>
            <% }) %>
        </div>
    </div>
</div>